@model List<Nestify.Models.InteriorGallery>
@{
    ViewData["Title"] = "Nestify Interior Design Gallery";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section Styles {
    <link rel="stylesheet" href="~/css/Gallery.css" asp-append-version="true" />
}

<!-- Utilize Mobile Menu End -->
<div class="ltn__utilize-overlay"></div>

<!-- BREADCRUMB AREA START -->
<div class="ltn__breadcrumb-area text-left bg-overlay-white-30 bg-image " data-bs-bg="img/bg/14.jpg">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="ltn__breadcrumb-inner">
                    <h1 class="page-title">Interior Design Gallery</h1>
                    <div class="ltn__breadcrumb-list">
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- BREADCRUMB AREA END -->
<div class="ltn__utilize-overlay"></div>

<div class="ltn__utilize-overlay"></div>

<main class="gallery-container">
    <div class="gallery-nav">
        <button class="active">All</button>
        <button>Modern</button>
        <button>Classic</button>
        <button>Boho</button>
        <button>Minimalist</button>
        <button>Industrial</button>
    </div>

    <div class="gallery-grid">
            @foreach (var image in Model)
            {
                <div class="gallery-item" data-category="@image.Style">
                    <img src="@image.ImageUrl" alt="@image.Title" />
                    <div class="item-overlay">
                        <h3 class="item-title">@image.Title</h3>
                        <span class="item-category">@image.Style</span>
                    </div>
                </div>
            }



    </div>
</main>

@section Scripts {
    <script>
        document.querySelectorAll('.gallery-nav button').forEach(button => {
            button.addEventListener('click', function () {
                document.querySelectorAll('.gallery-nav button').forEach(btn => btn.classList.remove('active'));
                this.classList.add('active');
                const category = this.textContent.toLowerCase();
                document.querySelectorAll('.gallery-item').forEach(item => {
                    const itemCategory = item.getAttribute('data-category')?.toLowerCase() || '';
                    item.style.display = (category === 'all' || itemCategory === category) ? 'block' : 'none';
                });
            });
        });
    </script>
}
