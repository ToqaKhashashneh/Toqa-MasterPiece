
<!-- Utilize Mobile Menu End -->
<div class="ltn__utilize-overlay"></div>

<!-- BREADCRUMB AREA START -->
<div class="ltn__breadcrumb-area text-left bg-overlay-white-30 bg-image " data-bs-bg="img/bg/14.jpg">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="ltn__breadcrumb-inner">
                    <h1 class="page-title">Register</h1>
                    <div class="ltn__breadcrumb-list">
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- BREADCRUMB AREA END -->
<div class="ltn__utilize-overlay"></div>



<!-- LOGIN AREA START (Register) -->
<div class="ltn__login-area pb-110">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="section-title-area text-center">
                    <h1 class="section-title">Register <br>Your Account</h1>

                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-6 offset-lg-3">
                <div class="account-login-inner">
                    @model Nestify.Models.ViewModels.RegisterViewModel


                    <form asp-action="Register" method="post" class="ltn__form-box contact-form-box">
                        <input asp-for="FirstName" placeholder="First Name" />
                        <span asp-validation-for="FirstName" class="text-danger"></span>


                        <input asp-for="LastName" placeholder="Last Name" />
                        <span asp-validation-for="LastName" class="text-danger"></span>

                        <input asp-for="Email" placeholder="Email*" />
                        <span asp-validation-for="Email" class="text-danger"></span>

                        <input asp-for="Password" type="password" placeholder="Password*" />
                        <span asp-validation-for="Password" class="text-danger"></span>

                        <input asp-for="ConfirmPassword" type="password" placeholder="Confirm Password*" />
                        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>

                        <div class="btn-wrapper">
                            <button class="theme-btn-1 btn reverse-color btn-block" type="submit">CREATE ACCOUNT</button>
                        </div>
                    </form>

                   

                    <div class="by-agree text-center">
                        <div class="go-to-btn mt-50">
                            <a asp-controller="User" asp-action="Login" > ALREADY HAVE AN ACCOUNT ?</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- LOGIN AREA END -->
@section Scripts {

    {
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script>
        @if (ViewBag.RegisterSuccess != null)
        {
            <text>
                    Swal.fire({
                        icon: 'success',
                        title: 'Registration Successful!',
                        text: '@ViewBag.RegisterSuccess',
                        confirmButtonColor: '#e72463',
                        timer: 2500,
                        timerProgressBar: true,
                        showConfirmButton: false
                    }).then(() => {
                        window.location.href = '/User/Login'; // Redirect to login
                    });
            </text>
        }
    </script>
}
